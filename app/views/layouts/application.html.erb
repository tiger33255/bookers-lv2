<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" >
    <link rel="stylesheet" href="default.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
  </head>

  <header>
      <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <div class="navbar-brand theme">Bookers</div>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
                <li class="nav-li"><%= link_to " Home", user_path(current_user), class: "fas fa-home list-icon" %></li>
                <li class="nav-li"><%= link_to " Users", users_path, class: "fas fa-user-alt" %></li>
                <li class="nav-li"><%= link_to " Books", books_path, class: "fas fa-book" %></li>
                <li class="nav-li"><%= link_to 'log out', destroy_user_session_path, :method => :delete, class:"fas fa-sign-out-alt" %></li>
            <% else %>
                <li class="nav-li"><%= link_to " Home", root_path, class: "fas fa-home list-icon" %></li>
                <li class="nav-li"><%= link_to " About", home_about_path, class: "fas fa-link list-icon" %></li>
                <li class="nav-li"><%= link_to " sign up", new_user_registration_path, class: "fas fa-edit list-icon" %></li>
                <li class="nav-li"><%= link_to " log in", new_user_session_path, class: "fas fa-sign-in-alt list-icon" %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <%= yield %>
    <footer><p class="footer-text">CopyRight Infratop.inc</p></footer>
  </header>
</html>
