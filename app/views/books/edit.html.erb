<h1>Editing Book</h1>

	<% if @book.errors.any? %>
	<%= @book.errors.count %> errors prohibited this obj from being saved:
	<ul>
		<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
	</ul>
	<% end %>

	<%= form_for(@book) do |f| %>
		<p>Title</p>
		<%= f.text_field :title %>

		<p>Body</p>
		<%= f.text_area :body %>
		<%= f.submit 'Update Book', class: "btn btn-info" %>
	<% end %>

<%= link_to "Show", book_path(@book) %>|<%= link_to "Back" , books_path %>